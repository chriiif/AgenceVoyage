<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../../style/style.css">
  <style>
    html, body {
      height: 100%;
      background-color: #f8f9fa;
      margin: 0;
    }
    .container-fluid {
      height: 100%;
    }
    .row {
      height: 100%;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px; /* Adjust width of the sidebar */
      background-color: #343a40;
      z-index: 1000; /* Ensure sidebar stays on top */
    }
    .main-content {
      margin-left: 260px; /* Adjust the margin to accommodate the sidebar */
      padding: 20px;
      z-index: 500; /* Ensure main content stays above sidebar */
    }
    .card {
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card-body {
      padding: 30px;
    }
    .card-title {
      font-weight: bold;
      font-size: 1.2rem;
    }
    .nav-link {
      font-size: 1.1rem;
    }
    .nav-link:hover {
      background-color: #495057;
      border-radius: 5px;
    }
    .card-text {
      font-size: 2rem;
      font-weight: bold;
    }
    .bg-primary-card {
      background-color: #007bff;
      color: white;
    }
    .bg-success-card {
      background-color: #28a745;
      color: white;
    }
    .bg-danger-card {
      background-color: #dc3545;
      color: white;
    }
    .sidebar-sticky {
      position: -webkit-sticky;
      position: sticky;
      top: 0;
      height: 100vh;
      padding-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar text-white">
        <div class="sidebar-sticky p-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active text-white" href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/clients">Clients</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/voyages">Voyages</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/reservations">Reservations</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <main class="col-md-9 col-lg-10 main-content">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
        </div>

        <div class="row">
          <!-- Total Clients -->
          <div class="col-md-4 mb-4">
            <div class="card bg-primary-card text-center">
              <div class="card-body">
                <h5 class="card-title">Total Clients</h5>
                <p class="card-text"><%= totalPClient %></p>
              </div>
            </div>
          </div>

          <!-- Total Voyages -->
          <div class="col-md-4 mb-4">
            <div class="card bg-success-card text-center">
              <div class="card-body">
                <h5 class="card-title">Total Voyages</h5>
                <p class="card-text"><%= totalVoyage %></p>
              </div>
            </div>
          </div>

          <!-- Total Reservations -->
          <div class="col-md-4 mb-4">
            <div class="card bg-danger-card text-center">
              <div class="card-body">
                <h5 class="card-title">Total Reservations</h5>
                <p class="card-text"><%= totalReservation %></p>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</body>
</html>
