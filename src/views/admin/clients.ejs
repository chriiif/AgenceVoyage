<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header'); %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../style/style.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      background-color: #343a40;
      color: white;
      padding: 20px;
      overflow-y: auto;
    }
    .main-content {
      margin-left: 250px;
      padding: 20px;
      max-width: calc(100% - 250px);
    }
    .nav-link {
      color: #ffffff;
    }
    .nav-link:hover {
      color: #ffc107;
    }

    .table th, .table td {
      text-align: center;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .table {
      width: 100%;
      table-layout: fixed;
      margin: 0 auto;
    }

    .table td:last-child, .table th:last-child {
      text-align: right;
    }

    .container-fluid {
      overflow-x: hidden;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <nav class="sidebar">
        <h3>Admin Menu</h3>
        <ul class="nav flex-column">
          <li class="nav-item"><a href="/admin/dashboard" class="nav-link">Dashboard</a></li>
          <li class="nav-item"><a href="/admin/clients" class="nav-link">Clients</a></li>
          <li class="nav-item"><a href="/admin/voyages" class="nav-link">Voyages</a></li>
          <li class="nav-item"><a href="/admin/reservations" class="nav-link">Reservations</a></li>
        </ul>
      </nav>

      <main class="main-content">
        <header class="my-4">
          <h1 class="h2">Manage Clients</h1>
        </header>

        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="table-dark">
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% clients.forEach(client => { %>
                <tr>
                  <td><%= client.prenom %></td>
                  <td><%= client.nom %></td>
                  <td><%= client.email %></td>
                  <td><%= client.tel %></td>
                  <td>
                    <form action="/admin/client/delete/<%= client._id %>" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this client?')">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
